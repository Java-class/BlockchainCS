<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>ir.javaclass.config.ContextListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>


    <servlet>
        <servlet-name>Login Peer</servlet-name>
        <servlet-class>ir.javaclass.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login Peer</servlet-name>
        <url-pattern>/login.srv*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register Peer</servlet-name>
        <servlet-class>ir.javaclass.controller.RegisterPeerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register Peer</servlet-name>
        <url-pattern>/peer/registercontroller.srv*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Peer Setting</servlet-name>
        <servlet-class>ir.javaclass.controller.PeerSettingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Peer Setting</servlet-name>
        <url-pattern>/peer/peer-setting.srv*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Peer LocalSetting</servlet-name>
        <servlet-class>ir.javaclass.controller.LocalSetting</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Peer LocalSetting</servlet-name>
        <url-pattern>/peer/local-setting.srv*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Jersey REST Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.package</param-name>
            <param-value>rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey REST Service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
</web-app>